<?xml version="1.0" encoding="utf-8"?>

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiderScreen"
    >
        <EditText
            android:id="@+id/area"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/landmrkshow"
            android:layout_gravity="left|top"
            android:paddingLeft="40dp"
            android:hint="SET LANDMARK"
            android:textColor="#000000"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/searchbuttonn"
            android:layout_width="80dp"
            android:layout_height="60dp"
           android:background="@drawable/searchbuttonn"
            android:layout_gravity="right|top"/>

    <ImageButton
        android:layout_width="40dp"
        android:id="@+id/mylocations"
        android:layout_height="50dp"
        android:background="@drawable/mylocationbutton"
        android:layout_gravity="right|center_vertical"
        />


    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/confirmbuttron"
        android:layout_gravity="center_horizontal|bottom"
        android:padding="10dp"
        android:background="@drawable/confirnbuttoon"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp"/>
</fragment>